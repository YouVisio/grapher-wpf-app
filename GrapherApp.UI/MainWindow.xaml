<Window x:Class="GrapherApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grapher" Height="860" Width="1024" Icon="pack://application:,,,/Resources/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="190" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>


        <Canvas Grid.Row="0" Name="OuterCanvas"  Width="1024" Height="600" Background="WhiteSmoke" ClipToBounds="True" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Canvas Name="TheCanvas" Canvas.Left="237" Canvas.Top="25" ClipToBounds="False" HorizontalAlignment="Center" VerticalAlignment="Center"></Canvas>
        </Canvas>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="145"/>
            </Grid.ColumnDefinitions>

            <Rectangle Grid.Row="0" Grid.Column="0" Width="10" Height="100" Fill="Red"></Rectangle>
            <TextBox Grid.Row="0" Grid.Column="1" Name="SourceCode1" AcceptsReturn="True" AcceptsTab="True" />
            <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="4" Click="Button_Click">
                <StackPanel Orientation="Vertical">
                    <Label FontSize="15" HorizontalAlignment="Center">Run</Label>
                    <Label FontSize="10" HorizontalAlignment="Center">(Ctrl + Enter) OR (Alt + Enter)</Label>
                </StackPanel>
            </Button>

            <Rectangle Grid.Row="1" Grid.Column="0" Width="10" Height="100" Fill="Green"></Rectangle>
            <TextBox Grid.Row="1" Grid.Column="1" Name="SourceCode2"  />

            <Rectangle Grid.Row="2" Grid.Column="0" Width="10" Height="100" Fill="Blue"></Rectangle>
            <TextBox Grid.Row="2" Grid.Column="1" Name="SourceCode3" />

            <Rectangle Grid.Row="3" Grid.Column="0" Width="10" Height="100" Fill="Purple"></Rectangle>
            <TextBox Grid.Row="3" Grid.Column="1" Name="SourceCode4" />
        </Grid>


        <TextBlock  Grid.Row="2" Name="Message" Foreground="Red"></TextBlock>
    </Grid>
</Window>
