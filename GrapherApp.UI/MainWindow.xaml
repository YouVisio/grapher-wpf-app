<Window x:Class="GrapherApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grapher" Height="780" Width="1024" Icon="pack://application:,,,/Resources/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>


        <Canvas Grid.Row="0" Name="OuterCanvas"  Width="1024" Height="600" Background="WhiteSmoke" ClipToBounds="True" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Canvas Name="TheCanvas" Canvas.Left="237" Canvas.Top="25" ClipToBounds="False" HorizontalAlignment="Center" VerticalAlignment="Center"></Canvas>
        </Canvas>
        

        <DockPanel Panel.ZIndex="0" Grid.Row="1" HorizontalAlignment="Center" Margin="2">
            <Rectangle Width="30" Height="30" Fill="Red"></Rectangle>
            <TextBox Name="SourceCode1" Text=""  Width="600" />
            <Button Content="Run" Click="Button_Click" Width="100" />
        </DockPanel>

        <DockPanel Panel.ZIndex="0" Grid.Row="2" HorizontalAlignment="Center" Margin="2">
            <Rectangle Width="30" Height="30" Fill="Green"></Rectangle>
            <TextBox Name="SourceCode2" Text=""  Width="600"  />
            <Button Content="Run" Click="Button_Click" Width="100" />
        </DockPanel>

        <DockPanel Panel.ZIndex="0" Grid.Row="3" HorizontalAlignment="Center" Margin="2" Background="White">
            <Rectangle Width="30" Height="30" Fill="Blue"></Rectangle>
            <TextBox Name="SourceCode3" Text=""  Width="600" />
            <Button Content="Run" Click="Button_Click" Width="100" />
        </DockPanel>

        <DockPanel Panel.ZIndex="0" Grid.Row="4" HorizontalAlignment="Center" Margin="2" Background="White">
            <Rectangle Width="30" Height="30" Fill="Purple"></Rectangle>
            <TextBox Name="SourceCode4" Text=""  Width="600" />
            <Button Content="Run" Click="Button_Click" Width="100" />
        </DockPanel>

        <TextBlock  Grid.Row="5" Name="Message" Foreground="Red"></TextBlock>
    </Grid>
</Window>
